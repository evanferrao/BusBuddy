rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to get user role from users collection
    // Note: This performs a document read on each request. For production,
    // consider using Firebase Custom Claims or caching for better performance.
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is a driver
    function isDriver() {
      return isSignedIn() && getUserRole() == 'driver';
    }
    
    // Helper function to check if user is a passenger
    function isPassenger() {
      return isSignedIn() && getUserRole() == 'passenger';
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read their own user document
      allow read: if isSignedIn() && request.auth.uid == userId;
      
      // Users can create their own document during registration
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Users can update their own document
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      // Users cannot delete their own document
      allow delete: if false;
    }
    
    // Buses collection
    match /buses/{busId} {
      // Anyone authenticated can read buses
      allow read: if isSignedIn();
      
      // Only drivers can create or update buses
      allow create, update: if isDriver();
      
      // No one can delete buses
      allow delete: if false;
    }
    
    // Trips collection
    match /trips/{tripId} {
      // Anyone authenticated can read trips
      allow read: if isSignedIn();
      
      // Only drivers can create or update trips
      allow create, update: if isDriver();
      
      // No one can delete trips
      allow delete: if false;
      
      // Wait requests subcollection
      match /waitRequests/{passengerId} {
        // Anyone can read wait requests
        allow read: if isSignedIn();
        
        // Only passengers can create wait requests for themselves
        allow create: if isPassenger() && request.auth.uid == passengerId;
        
        // Passengers can update their own wait requests
        allow update: if isPassenger() && request.auth.uid == passengerId;
        
        // Passengers can delete their own wait requests
        allow delete: if isPassenger() && request.auth.uid == passengerId;
      }
      
      // Absences subcollection
      match /absences/{passengerId} {
        // Anyone can read absences
        allow read: if isSignedIn();
        
        // Only passengers can create absences for themselves
        allow create: if isPassenger() && request.auth.uid == passengerId;
        
        // No one can update or delete absences (they are final)
        allow update, delete: if false;
      }
    }
  }
}
